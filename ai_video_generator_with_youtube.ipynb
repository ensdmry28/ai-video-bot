# --- G√∂rsel √úretimi (DALL¬∑E) ---
def generate_image(prompt):
    response = openai.Image.create(
        model="dall-e-3",
        prompt=prompt,
        n=1,
        size="1024x1024"
    )
    image_url = response['data'][0]['url']
    image_path = "/content/image.png"
    with open(image_path, "wb") as f:
        f.write(requests.get(image_url).content)
    return image_path

